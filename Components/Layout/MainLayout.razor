@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Proyecto_Final.Components.Account
@inject IdentityRedirectManager RedirectManager
@inject NavigationManager NavManager

@rendermode InteractiveServer

<header class="bg-[#1A1A1A] text-white shadow-lg">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center py-4">
            <div class="flex items-center mb-4 md:mb-0">
                <img src="imagenes/logo/logo.png" alt="Golazo Store" class="h-20">

                <div class="hidden md:flex space-x-6 ml-8">
                    <NavLink href="/" class="font-medium hover:text-yellow-400">Inicio</NavLink>
                    <NavLink href="/camisetas" class="font-medium hover:text-yellow-400">Camisetas</NavLink>
                    <NavLink href="/botines" class="font-medium hover:text-yellow-400">Botines</NavLink>
                    <NavLink href="/guantes" class="font-medium hover:text-yellow-400">Guantes</NavLink>
                    <NavLink href="/accesorios" class="font-medium hover:text-yellow-400">Accesorios</NavLink>

                    <AuthorizeView Roles="Admin">
                        <NavLink href="/admin/productos" class="font-medium hover:text-yellow-400">Admin Productos</NavLink>
                        <NavLink href="/admin/pedidos" class="font-medium hover:text-yellow-400">Admin Pedidos</NavLink>
                    </AuthorizeView>
                </div>
            </div>

            <div class="flex items-center space-x-4 ml-auto mr-4">
                <div class="relative w-full md:w-96 mb-4 md:mb-0">
                    <input type="text" placeholder="Buscar productos..." class="w-full py-2 px-4 rounded-full text-gray-800 focus:outline-none">
                    <button class="absolute right-0 top-0 bg-yellow-500 text-black py-2 px-4 rounded-r-full hover:bg-yellow-600 transition-colors">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <NavLink href="/carrito" class="hover:text-yellow-400 relative">
                    <i class="fas fa-shopping-cart text-xl"></i>
                    <span class="absolute -top-2 -right-2 bg-yellow-500 text-black text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">3</span>
                </NavLink>
                <NavLink href="/perfil" class="hover:text-yellow-400"><i class="fas fa-user text-xl"></i></NavLink>
                <AuthorizeView>
                    <Authorized>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@NavManager.ToBaseRelativePath(NavManager.Uri)" />
                            <button type="submit" class="hover:text-yellow-400 text-xl focus:outline-none">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </Authorized>
                </AuthorizeView>
                <a href="#" class="md:hidden hover:text-yellow-400"><i class="fas fa-search text-xl"></i></a>
            </div>
        </div>
    </div>
</header>

<nav class="bg-white shadow-md">
    <div class="container mx-auto px-4">
    </div>
</nav>

<main class="flex-grow">
    @Body
</main>

<footer class="bg-[#1A1A1A] text-white pt-12 pb-6">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            <div>
                <h3 class="text-xl font-bold mb-4">Golazo Store</h3>
                <p class="text-gray-400 mb-4">Tu tienda oficial de artículos de fútbol en República Dominicana.</p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-yellow-400"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-gray-400 hover:text-yellow-400"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-gray-400 hover:text-yellow-400"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-gray-400 hover:text-yellow-400"><i class="fab fa-whatsapp"></i></a>
                </div>
            </div>

            <div>
                <h4 class="font-bold mb-4">COMPAÑÍA</h4>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Nosotros</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Blog</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Trabaja con nosotros</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Términos y condiciones</a></li>
                </ul>
            </div>

            <div>
                <h4 class="font-bold mb-4">AYUDA</h4>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Preguntas frecuentes</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Envíos y devoluciones</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Guía de tallas</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-yellow-400">Contacto</a></li>
                </ul>
            </div>

            <div>
                <h4 class="font-bold mb-4">CONTACTO</h4>
                <ul class="space-y-2">
                    <li class="flex items-start text-gray-400">
                        <i class="fas fa-map-marker-alt mr-2 mt-1"></i>
                        Av. 27 de Febrero #205, Santo Domingo
                    </li>
                    <li class="flex items-center text-gray-400">
                        <i class="fas fa-phone-alt mr-2"></i> (809) 555-1234
                    </li>
                    <li class="flex items-center text-gray-400">
                        <i class="fas fa-envelope mr-2"></i> info@golazostore.com.do
                    </li>
                    <li class="flex items-center text-gray-400">
                        <i class="fas fa-clock mr-2"></i> Lunes a Viernes: 9AM - 6PM
                    </li>
                </ul>
            </div>
        </div>

        <div class="border-t border-gray-700 pt-6 text-center text-gray-500 text-sm">
            <p>© @DateTime.Now.Year Golazo Store. Todos los derechos reservados.</p>
            <div class="mt-4">
                <img src="https://placehold.co/300x40/1A1A1A/ffffff?text=Visa+Mastercard+PayPal" alt="Métodos de pago" class="h-8 mx-auto opacity-70">
            </div>
        </div>
    </div>
</footer>

<a href="#" class="fixed bottom-6 right-6 bg-green-500 text-white p-4 rounded-full shadow-lg hover:bg-green-600 transition duration-300 z-50">
    <i class="fab fa-whatsapp text-2xl"></i>
</a>

@code {
    private bool showSearchBar = false; 

    private void ToggleSearchBar()
    {
        showSearchBar = !showSearchBar;
    }
}